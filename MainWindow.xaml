<Window x:Class="Spotify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spotify"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Canvas x:Name="LoginCanvas" Background="#FF212529">
            <TextBlock x:Name="TB_Willkommen"  Canvas.Left="218" TextWrapping="Wrap" Canvas.Top="36" Height="122" Width="364" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="45" FontWeight="Bold" TextAlignment="Center" Foreground="#FFF8F9FA"><Run Language="de-de" Text="Willkommen bei"/><LineBreak/><Run Language="de-de" Text="Tobify / Didify"/></TextBlock>
            <Button x:Name="Btn_anmelden" Content="anmelden" Canvas.Left="352" Canvas.Top="316" HorizontalAlignment="Left" VerticalAlignment="Top" Height="28" Width="96" Background="#FF495057" BorderBrush="{x:Null}" Foreground="#FFF8F9FA" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" Click="Btn_anmelden_Click"/>
            <PasswordBox x:Name="PB_passwort" Canvas.Left="245" Canvas.Top="274" Width="310" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Background="#FF495057" Foreground="#FFF8F9FA" BorderBrush="{x:Null}"/>
            <Label x:Name="Lbl_PasswortEingeben" Content="Passwort eingeben" Canvas.Left="245" Canvas.Top="248" Foreground="#FFF8F9FA" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="Lbl_BenutzerEingeben" Content="Benutzer eingeben" Canvas.Left="245" Canvas.Top="178" Foreground="#FFF8F9FA" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox x:Name="TB_benutzer" Canvas.Left="245" TextWrapping="Wrap" Canvas.Top="204" Width="310" HorizontalAlignment="Left" VerticalAlignment="Center" BorderBrush="{x:Null}" Height="26" Background="#FF495057" Foreground="#FFF0F9FA"/>
            <Label x:Name="Lbl_Fehlermeldung" Content="Benutzer oder Passwort falsch, versuche es erneut!" Canvas.Left="249" Canvas.Top="371" Foreground="#FFF8F9FA" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Width="302"/>
        </Canvas>
        <Image Margin="-421,197,859,63" Source="/Image1.png" Stretch="Fill"/>
    </Grid>
</Window>
