<Window x:Class="Spotify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spotify"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" Loaded="Window_Loaded">
    <Grid>
        <Canvas x:Name="LoginCanvas" Background="#FF212529">
            <TextBlock x:Name="TB_Willkommen"  Canvas.Left="486" TextWrapping="Wrap" Canvas.Top="191" Height="266" Width="948" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="90" FontWeight="Bold" TextAlignment="Center" Foreground="#FFF8F9FA"><Run Language="de-de" Text="Willkommen bei"/><LineBreak/><Run Language="de-de" Text="Tobify / Didify"/></TextBlock>
            <Button x:Name="Btn_anmelden" Content="anmelden" Canvas.Left="912" Canvas.Top="714" HorizontalAlignment="Left" VerticalAlignment="Top" Height="28" Width="96" Background="#FF495057" BorderBrush="{x:Null}" Foreground="#FFF8F9FA" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" Click="Btn_anmelden_Click"/>
            <PasswordBox x:Name="PB_passwort" Canvas.Left="805" Canvas.Top="672" Width="310" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Background="#FF495057" Foreground="#FFF8F9FA" BorderBrush="{x:Null}"/>
            <Label x:Name="Lbl_PasswortEingeben" Content="Passwort eingeben" Canvas.Left="805" Canvas.Top="646" Foreground="#FFF8F9FA" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="Lbl_BenutzerEingeben" Content="Benutzer eingeben" Canvas.Left="805" Canvas.Top="576" Foreground="#FFF8F9FA" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="TB_benutzer" Canvas.Left="805" TextWrapping="Wrap" Canvas.Top="602" Width="310" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="{x:Null}" Height="26" Background="#FF495057" Foreground="#FFF0F9FA"/>
            <Label x:Name="Lbl_Fehlermeldung" Content="Benutzer oder Passwort falsch, versuche es erneut!" Canvas.Left="809" Canvas.Top="787" Foreground="#FFF8F9FA" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Width="302"/>
            <Button x:Name="Btn_RegisterSwitch" Content="Noch kein Konto? Erstelle eins." Canvas.Left="884" Canvas.Top="754" Height="28" Width="152" BorderBrush="{x:Null}" Foreground="#FFF8F9FA" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" Click="Btn_RegisterSwitch_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" FontSize="10"/>
        </Canvas>

        <Canvas x:Name="RegisterCanvas" Background="#FF212529" Margin="10,10,0,10" d:IsHidden="True">
            <TextBlock x:Name="TB_RegisterText" TextWrapping="Wrap" FontSize="90" FontWeight="Bold" TextAlignment="Center" Foreground="#FFF8F9FA" Height="124" Canvas.Left="648" Canvas.Top="218" Width="614" HorizontalAlignment="Center" VerticalAlignment="Top"><Run Language="de-de" Text="registrieren"/></TextBlock>
            <PasswordBox x:Name="PB_PasswortRegistrieren" Canvas.Left="750" Canvas.Top="451" Width="414" Background="#FF495057" BorderBrush="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Foreground="#FFF8F9FA" FontSize="25"/>
            <Button x:Name="Btn_Registrieren" Content="registrieren" Canvas.Left="868" Canvas.Top="648" RenderTransformOrigin="-0.067,-0.674" HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="{x:Null}" Background="#FF495057" Height="41" Width="174" FontWeight="Bold" Foreground="#FFF8F9FA" Click="Btn_Registrieren_Click" FontSize="25"/>
            <TextBox x:Name="TB_BenutzerRegistrieren" Canvas.Left="750" TextWrapping="Wrap" Canvas.Top="572" Width="414" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#FF495057" BorderBrush="{x:Null}" Height="36" Foreground="#FFF8F9FA" FontSize="25"/>
            <Label x:Name="Lbl_BenutzerEingebenRegister" Content="Benutzer eingeben" Canvas.Left="750" Canvas.Top="404" HorizontalAlignment="Center" VerticalAlignment="Top" Width="282" FontWeight="Bold" Foreground="#FFF8F9FA" Height="52" FontSize="30"/>
            <Label x:Name="Lbl_PasswortEingebenRegister" Content="Passwort eingeben" Canvas.Left="750" Canvas.Top="527" Width="276" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFF8F9FA" FontWeight="Bold" FontSize="30"/>
            <Label x:Name="Lbl_FehlermeldungRegister" Content="Benutzer und Passwort sind bereits vergeben!" Foreground="#FFF8F9FA" FontWeight="Bold" Background="{x:Null}" Height="39" Canvas.Left="734" Canvas.Top="781" Width="442" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"/>
            <Button x:Name="Btn_zurueckZurAnmeldung" Content="&gt; zurück zur Anmeldung" Canvas.Left="852" Canvas.Top="728" RenderTransformOrigin="-0.067,-0.674" BorderBrush="{x:Null}" Height="32" Width="206" FontWeight="Bold" Foreground="#FFF8F9FA" Click="Btn_zurueckZurAnmeldung_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Background="{x:Null}" FontSize="17"/>
        </Canvas>
        <Image Margin="-1171,391,2479,391" Source="/Image1.png" Stretch="Fill"/>
    </Grid>
</Window>
